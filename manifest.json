{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Adobe Acrobat: PDF edit, convert, sign tools",
    "options_page": "options.html",
    "permissions": [
        "storage",
        "alarms"
    ],
    "description": "Do more in Google Chrome with Adobe Acrobat PDF tools. View, fill, comment, sign, and try convert and compress tools.",
    "version": "1.3.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "hid_service_worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "css/style.css"
            ],
            "js": [
                "worker.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}